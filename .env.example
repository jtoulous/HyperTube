# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=hypertube

# API Configuration
JWT_SECRET=dev_secret_key_change_in_production

# Email Configuration (Gmail)
# For Gmail: Use App Password, not your regular password
# Enable 2FA and create App Password: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
MAIL_FROM=your_email@gmail.com
MAIL_FROM_NAME=Hypertube

# 42 API (for 42 OAuth login)
FORTYTWO_UID=your_42_uid_here
FORTYTWO_SECRET=your_42_secret_here

# GitHub Oauth App (for GitHub OAuth login)
GITHUB_UID=your_github_uid_here
GITHUB_SECRET=your_github_secret_here

# Discord Oauth2 App (for Discord OAuth login)
DISCORD_UID=your_discord_uid_here
DISCORD_SECRET=your_discord_secret_here

# qBittorrent Web API (for torrent management)
QBITTORRENT_URL=http://hypertube-torrent-client:8080
QBITTORRENT_USER=your_qbittorrent_user_here
QBITTORRENT_PASS=your_qbittorrent_pass_here

HOST_IP=your_host_ip_here  # e.g., 10.0.0.1

# TMDB API (for movie/series details — https://www.themoviedb.org/settings/api)
# You can use EITHER:
#   - "Jeton d'accès en lecture à l'API" (Read Access Token) — long eyJ… JWT
#   - "Clé d'API" (API Key) — short hex string
# Both work. The service auto-detects which one you provide.
TMDB_API_KEY=your_tmdb_api_key_or_read_access_token_here
